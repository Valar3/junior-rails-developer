<h1>Posts listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Author email</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.Author_email %></td>
        <td><%=button_to 'Show', post_path(post), method: :get %></td>
        <td><%=button_to 'Edit', edit_post_path(post), method: :get %></td>
        <td><%=button_to 'Delete', post_path(post), method: :delete %> </td>

    <% end %>
  </tbody>
</table>
<p>
    <%=button_to "Create New Post", new_post_path , method: :get%>
</P>
