<h1>Posts listing page</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Written by</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td>by <%= post.author.email if post.author%></td>
        <td><%=button_to 'Show', post_path(post), method: :get %></td>
       <% if Author_signed_in? && post.author == current_Author || current_Author.admin? %>
          <td><%=button_to 'Edit', edit_post_path(post), method: :get %></td>
          <td><%=button_to 'Delete', post_path(post), method: :delete, data: {confirm: "Are you sure?"}  %> </td>
        <% end %>
    <% end %>
  </tbody>
</table>
<p>
    <%=button_to "Create New Post", new_post_path , method: :get%>
</P>
