<h1>Showing posts details</h1>
<p><strong>Title:</strong> <%= @post.title %></p>
<p><strong>Description: </strong> <%= @post.description %> </p>
<p> by <%= @post.author.email if @post.author%></P>
<P>
 <% if logged_in? && @post.author == current_author %>
          <%= button_to "Edit", edit_post_path(@post), class: "btn btn-outline-info" %>
          <%= button_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure?"} %>
          <% end %>
</P>
